<h1>Exchange#index</h1>
<p>Find me in app/views/exchange/index.html.erb</p>

    <h3>Data publikacji: <%= @exchangeDate %></h3>

    <%= form_for :search, :method => 'get' do |f| %>
      Search for:
      <%= f.text_field :text %>
      <%= f.submit "Find" %>
      <br/>
      whole word
      <%= f.check_box :whole_word %>
      <br/>
    <% end %>

    <%= form_for :exchange_date do |f| %>
      <%= f.label "Date" %>
      <%= f.text_field :date, :class => "date-field" %>
      <%= f.submit "Change" %>
    <% end %>

    <table style="border:1px solid black;">
      <thead>
       <tr>
         <th>Nazwa waluty</th>
         <th>Kod waluty</th>
         <th>Kurs kupna</th>
         <th>Kurs sprzedazy</th>
       </tr>
      </thead>
      <tbody>
      <% @exchangeArray.each do |exchange| %>
      <tr>
        <td><%= exchange["nazwa_waluty"] %></td>
        <td><%= exchange["kod_waluty"] %></td>
        <td><%= exchange["kurs_kupna"] %></td>
        <td><%= exchange["kurs_sprzedazy"] %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
